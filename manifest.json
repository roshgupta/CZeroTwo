{
  "name": "CZeroTwo",
  "version": "0.1.0",
  "description": "This extension will help us to find out the carbon emission caused by loading a website.",
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "*://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "contentscript.js"
      ]
    }
  ],
  "action": {
    "default_popup": "./popup/index.html",
    "default_title": "CZeroTwo"
  },
  "manifest_version": 3
}